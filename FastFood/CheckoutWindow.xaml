<Window x:Class="FastFood.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FastFood"
        mc:Ignorable="d"
        Title="Checkout" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Grid/>
        <Grid Grid.Column="1"/>
        <Grid Grid.Column="2">
            <Button Content="new OrderWindow" Margin="0,10,0,0" VerticalAlignment="Top" Height="30"/>
            <Button Content="new DisplayWindow" Margin="0,45,0,0" VerticalAlignment="Top" Height="30"/>
        </Grid>


    </Grid>
</Window>
